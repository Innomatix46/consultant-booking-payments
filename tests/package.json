{
  "name": "payment-system-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for payment system",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration --runInBand",
    "test:e2e": "jest tests/e2e --runInBand --detectOpenHandles",
    "test:performance": "jest tests/performance --runInBand --detectOpenHandles",
    "test:security": "jest tests/security --runInBand",
    "test:watch": "jest --watch",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:security",
    "test:coverage": "jest --coverage --coverageReporters=text --coverageReporters=html",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",
    "test:load": "jest tests/performance/payment-load.test.js --runInBand",
    "test:smoke": "jest tests/e2e --testNamePattern='should complete.*payment' --runInBand"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/utils/jest-setup.js"],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "html", "json"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/database/**",
      "!src/config/**",
      "!**/*.test.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    },
    "testTimeout": 30000,
    "maxWorkers": 4,
    "verbose": true
  },
  "dependencies": {
    "supertest": "^6.3.3",
    "jest": "^29.7.0",
    "puppeteer": "^21.5.2",
    "autocannon": "^7.12.0",
    "mongodb-memory-server": "^9.1.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest-environment-node": "^29.7.0"
  }
}